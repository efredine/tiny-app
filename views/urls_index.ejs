<!doctype html>
<html lang="en">
<head>
  <%- include('partials/_head') %>
</head>
<body>
<%- include('partials/_header') %>
<div class="container">
  <h2>Your Short URLs</h2>
  <a href="/urls/new">Add a New URL</a>
  <table class="table">
    <tr>
      <th>Short URL</th>
      <th>Original URL</th>
      <th></th>
      <th></th>
    </tr>
    <% Object.keys(urls).forEach(shortUrl => { %>
      <tr class="table">
        <td><a href="<%= baseUrl + shortUrl %>"><%= baseUrl + shortUrl %></a></td>
        <td><a href="<%= urls[shortUrl] %>"><%= urls[shortUrl] %></a></td>
        <td><a href="/urls/<%= shortUrl %>">Edit</a></td>
        <td><form method="POST" action="/urls/<%= shortUrl %>/delete" ><input type='submit' value='Delete'></form></td>
      </tr>
    <% }) %>
  </table>
</div>
</body>
</html>