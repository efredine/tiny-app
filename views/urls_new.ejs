<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/_head') %>
  </head>
  <body>
    <div class="container">
      <%- include('partials/_header') %>
      <form action="/urls" method="POST">
        <div class="form-group">
          <label for="longURL">Enter a URL to shorten:</label>
          <input class="form-control" id="longUrl" type="text" name="longUrl" placeholder="http://">
        </div>
        <% if(errorMessage) { %>
          <p class="error"><%= errorMessage %></p>
        <% } %>
        <div class="form-group">
          <input class="btn btn-success btn-block" type="submit" value="Shorten">
        </div>
      </form>
    </div>
  </div>
  </body>
</html>
